<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/green_02" android:state_selected="true">
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="@color/white"/>
            <stroke android:width="1dp" android:color="@color/green_02" />
        </shape>
    </item>

    <item android:color="@color/gray_04" android:state_selected="false">
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="@color/white"/>
            <stroke android:width="1dp" android:color="@color/gray_04" />
        </shape>
    </item>
</selector>