<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="container.restaurant.android.presentation.feed.item.FeedPreviewItem" />
        <variable
            name="eventHolder"
            type="container.restaurant.android.util.RecyclerViewItemClickListeners.ExploreFeedItemClickListener" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="10dp"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_img_feed"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/img_feed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_empty_feed_img"
                android:scaleType="centerCrop"
                bind:imageUrlWithBaseUrl="@{item.feedPreviewDto.thumbnailUrl}"
                bind:emptyFeedBackgroundSetup='@{"true"}'
                android:onClick="@{()->eventHolder.onExploreFeedItemClick(item.feedPreviewDto.id)}"
                android:contentDescription="@string/feed_image" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:onClick="@{()->eventHolder.onLikeFeedItemClick(item)}"
            android:padding="4dp"
            android:src="@{item.isLike ? @drawable/ic_like_activated : @drawable/ic_like_outline_white_20_px}"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/like_button"
            app:layout_constraintBottom_toBottomOf="@+id/card_view_img_feed"
            app:layout_constraintRight_toRightOf="@+id/card_view_img_feed" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top"
            app:layout_constraintTop_toBottomOf="@+id/card_view_img_feed"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/tv_nickname"
                android:textAppearance="@style/TextAppearance.App.B.Gray07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="@{item.feedPreviewDto.ownerNickname}"
                android:textSize="12dp"
                tools:ignore="SpUsage"
                app:layout_constraintTop_toBottomOf="@+id/card_view_img_feed"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="닉네임" />

            <TextView
                android:id="@+id/tv_contents"
                android:textAppearance="@style/TextAppearance.App.R.Gray06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{item.feedPreviewDto.content}"
                android:visibility='@{item.feedPreviewDto.content==null || item.feedPreviewDto.content.empty? View.GONE : View.VISIBLE}'
                android:textSize="12dp"
                tools:ignore="SpUsage"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
                tools:text="컨텐츠 컨텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 " />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textAppearance="@style/TextAppearance.App.R.Gray05"
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(item.likeCnt)}"
                    android:textSize="12dp"
                    tools:ignore="SpUsage"
                    tools:text="99"
                    app:drawableStartCompat="@drawable/ic_like_outline_12_px"
                    android:drawablePadding="4dp" />

                <TextView
                    android:textAppearance="@style/TextAppearance.App.R.Gray05"
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(item.feedPreviewDto.replyCount)}"
                    android:textSize="12dp"
                    tools:ignore="SpUsage"
                    android:layout_marginStart="4dp"
                    tools:text="99"
                    app:drawableStartCompat="@drawable/ic_comment_outline_12_px"
                    android:drawablePadding="4dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>