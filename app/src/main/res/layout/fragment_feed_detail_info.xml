<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.feed.detail.FeedDetailInfoFragment">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="container.restaurant.android.presentation.feed.detail.FeedDetailViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:paddingHorizontal="16dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/shadow_box"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/tv_container_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/container_restaurant"
                android:textAppearance="@style/TextAppearance.App.R.Gray07"
                android:textSize="14dp"
                tools:ignore="SpUsage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="돈까스/회/일식"
                android:textAppearance="@style/TextAppearance.App.B.Gray05"
                android:background="@drawable/border_gray05_r14"
                android:textSize="12dp"
                tools:ignore="SpUsage"
                android:text="@{viewModel.categoryStr}"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_container_restaurant"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="신전떡볶이 명동점"
                android:textAppearance="@style/TextAppearance.App.B.Gray07"
                android:textSize="14dp"
                tools:ignore="SpUsage"
                android:drawablePadding="3dp"
                bind:stripHtmlText="@{viewModel.restaurantName}"
                app:drawableEndCompat="@drawable/ic_chevron_right_outline"
                app:layout_constraintStart_toEndOf="@id/tv_category"
                app:layout_constraintTop_toTopOf="@id/tv_category"
                app:layout_constraintBottom_toBottomOf="@id/tv_category"
                android:layout_marginStart="6dp"/>
            <ImageView
                android:id="@+id/iv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_welcome_restaurant"
                android:layout_marginTop="8dp"
                android:visibility="@{viewModel.isWelcome == null || viewModel.isWelcome == false? View.GONE : View.VISIBLE}"
                android:contentDescription="@string/welcome_mark"
                app:layout_constraintTop_toBottomOf="@id/tv_category"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_take_out_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:background="@drawable/shadow_box"
            app:layout_constraintTop_toBottomOf="@id/layout_restaurant">
            <TextView
                android:id="@+id/tv_take_out_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/take_out_level"
                android:textAppearance="@style/TextAppearance.App.R.Gray07"
                android:textSize="14dp"
                tools:ignore="SpUsage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <com.hedgehog.ratingbar.RatingBar
                android:id="@+id/sb_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_take_out_level"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="6dp"
                bind:clickable='@{"false"}'
                bind:setRating="@{viewModel.difficulty}"
                app:starCount="5"
                app:starEmpty="@drawable/ic_hard_disabled_32_px"
                app:starFill="@drawable/ic_hard_filled_32px"
                app:starImageHeight="32dp"
                app:starImageWidth="32dp" />
            <TextView
                android:id="@+id/tv_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.App.B.Gray07"
                android:textSize="14dp"
                bind:difficultyIntToText="@{viewModel.difficulty}"
                tools:ignore="SpUsage"
                tools:text="까다로워요"
                app:layout_constraintStart_toEndOf="@id/sb_difficulty"
                app:layout_constraintTop_toTopOf="@id/sb_difficulty"
                app:layout_constraintBottom_toBottomOf="@id/sb_difficulty"
                android:layout_marginStart="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_main_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:background="@drawable/shadow_box"
            app:layout_constraintTop_toBottomOf="@id/layout_take_out_level">
            <TextView
                android:id="@+id/tv_main_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_menu"
                android:textAppearance="@style/TextAppearance.App.R.Gray07"
                android:textSize="14dp"
                tools:ignore="SpUsage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_main_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/tv_main_menu"
                app:layout_constraintStart_toStartOf="parent"
                bind:dino_itemLayout="@{@layout/item_detail_main_menu}"
                bind:dino_items="@{viewModel.mainMenuList}"
                bind:dino_vm="@{viewModel}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                tools:listitem="@layout/item_detail_main_menu"
                tools:itemCount="2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_sub_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:background="@drawable/shadow_box"
            android:visibility="@{viewModel.subMenuList==null || viewModel.subMenuList.empty? View.GONE : View.VISIBLE}"
            app:layout_constraintTop_toBottomOf="@id/layout_main_menu">
            <TextView
                android:id="@+id/tv_sub_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/side_menu"
                android:textAppearance="@style/TextAppearance.App.R.Gray07"
                android:textSize="14dp"
                tools:ignore="SpUsage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_side_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_sub_menu"
                android:layout_marginTop="6dp"
                bind:dino_itemLayout="@{@layout/item_detail_sub_menu}"
                bind:dino_items="@{viewModel.subMenuList}"
                bind:dino_vm="@{viewModel}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                tools:itemCount="2"
                tools:listitem="@layout/item_detail_sub_menu"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>