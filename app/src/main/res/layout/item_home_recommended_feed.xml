<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>
        <variable
            name="item"
            type="container.restaurant.android.presentation.feed.item.FeedPreviewItem" />
        <variable
            name="eventHolder"
            type="container.restaurant.android.util.RecyclerViewItemClickListeners.ExploreFeedItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:onClick="@{()->eventHolder.onExploreFeedItemClick(item.feedPreviewDto.id)}"
        android:layout_marginVertical="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_img_feed"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="0dp"
            >
            <ImageView
                android:id="@+id/img_feed"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_empty_feed_img"
                bind:imageUrlWithBaseUrl="@{item.feedPreviewDto.thumbnailUrl}"
                bind:emptyFeedBackgroundSetup='@{"true"}'
                android:contentDescription="@string/recommended_feed_thumbnail_image" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:onClick="@{()->eventHolder.onLikeFeedItemClick(item)}"
            android:src="@{item.isLike ? @drawable/ic_like_activated : @drawable/ic_like_outline_white_20_px}"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/like_button"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@id/card_view_img_feed"
            app:layout_constraintRight_toRightOf="@id/card_view_img_feed" />



        <TextView
            android:id="@+id/tv_nickname"
            android:textAppearance="@style/TextAppearance.App.B.Gray07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:singleLine="true"
            android:text="@{item.feedPreviewDto.ownerNickname}"
            android:textSize="12dp"
            tools:ignore="SpUsage"
            app:layout_constraintTop_toBottomOf="@id/card_view_img_feed"
            tools:text="닉네임"
            />

        <TextView
            android:id="@+id/tv_contents"
            android:textAppearance="@style/TextAppearance.App.R.Gray06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@{item.feedPreviewDto.content}"
            android:visibility="@{item.feedPreviewDto.content.empty? View.GONE : View.VISIBLE}"
            android:textSize="12dp"
            tools:ignore="SpUsage"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@+id/tv_nickname"
            tools:text="컨텐츠 컨텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 텐츠 " />


        <TextView
            android:textAppearance="@style/TextAppearance.App.B.Gray05"
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(item.feedPreviewDto.likeCount)}"
            android:textSize="12dp"
            tools:ignore="SpUsage"
            tools:text="99"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_contents"
            app:drawableStartCompat="@drawable/ic_like_outline_12_px"
            android:drawablePadding="4dp"
            android:layout_marginTop="5dp"
            />


        <TextView
            android:textAppearance="@style/TextAppearance.App.B.Gray05"
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(item.feedPreviewDto.replyCount)}"
            android:textSize="12dp"
            tools:ignore="SpUsage"
            tools:text="99"
            app:layout_constraintTop_toBottomOf="@id/tv_contents"
            app:layout_constraintStart_toEndOf="@id/tv_like_count"
            app:drawableStartCompat="@drawable/ic_comment_outline_12_px"
            android:drawablePadding="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="6dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>